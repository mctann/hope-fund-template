---
interface Props {
  image: string;
  title: string;
  description: string;
  actionButton: string;
  secondaryButton: string,
}

const { title, image, description, actionButton, secondaryButton } = Astro.props;
---

<!-- Features -->
<div
  class="max-w-[85rem] bg-white pt-10 px-8 lg:px-16 lg:pt-14 mx-auto"
>
<div class="flex justify-center flex-col items-center text-center">
  <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 dark:text-gray-200">
    {title}
  </h1>

  <p class="mt-3 text-gray-600 max-w-lg">
    {description}
  </p>


  <div class="my-12">
    <button
          class="px-8 py-3 bg-orange-500 text-lg text-white rounded-lg font-semibold"
          >{actionButton}</button
        >
        <button
        class="px-8 py-3 ml-4 bg-white text-lg text-orange-500 rounded-lg font-semibold"
        >{secondaryButton}</button
      >
  </div>
    <img src={`assets/images/${image}`} alt="">

  <!-- End Grid -->
</div>
<!-- End Features -->
